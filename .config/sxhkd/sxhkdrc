## APPLICATIONS ##

# Terminal & file manager
super + {_, shift +} Return
    {$TERMINAL, $TERMINAL -e lf}

# Dmenu
super + d
    dmenu_path| dmenu -p "Û∞çâ " | xargs xdotool exec

# Clip
super + c
    clip

# Browser
super + {_, ctrl +} b
    {$BROWSER,qutebrowser}

# Telegram
super + ctrl + t
    telegram-desktop

# Terminal apps
super + ctrl + {a, m, n}
    $TERMINAL -e {ncmpcpp, pulsemixer, newsboat}

# Passwords
super + ctrl + p
   passmenu

# Screenshots
Print + {_,ctrl} + {_,shift}
    screenshot {_,--copy} {_,--area}

## SYSTEM ##

# reboot & shutdown
super + shift + q
    dmenu_powermenu

# change output monitor
super + shift + d
    change_monitor

# mount & umount disks
super + shift + {m, u}
    {dmenumount, dmenuumount}

# lockscreen
super + x
    loginctl lock-session

# compositor on/off
super + shift + c
    picom-on-off.sh

# gpu on/off
super + shift + v
    gpu-on-off.sh

# volume control
XF86Audio{Lower,Raise}Volume
    pulsemixer --change-volume {-5,+5}

XF86AudioMute
    pulsemixer --toggle-mute

XF86AudioPlay
    mpc toggle

XF86Audio{Next,Prev,Stop}
    mpc {next,prev,stop} && ~/.config/ncmpcpp/notification

# brightness control
XF86MonBrightness{Up,Down}
    brightnessctl set {+5%,5%-}

# dunst keybinds
ctrl + space
    dunstctl close

ctrl + shift + space
    dunstctl close-all

ctrl + shift + h
    dunstctl history-pop

ctrl + shift + i
    dunstctl action


#               #
# BSPWM KEYBIND #
#               #

# INIT #

# restart bspwm or quit
ctrl + Escape; {r, q}
    bspc {wm -r, quit}

# reload sxhkd
ctrl + Escape; shift + r
    pkill -usr1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

# close & kill
super + {_,shift + }w
    crystal {--close, --kill}


# WORKSPACE MANAGMENT #

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# enable/disable gaps
super + shift + g
    crystal --gaps

# switch workspaces
super + {_,shift} + Tab
    bspc desktop {next.occupied, prev.occupied} -f

#hide & unhide
super + {_, shift } + i
    bspc-ordered-hide {hide,unhide}

# create receptacle
super + alt + r; {h,j,k,l}
    bspc node --presel-dir {west,south,north,east} -i

# delete all receptacles
super + alt + r; u
    for win in `bspc query -N -n .leaf.\!window`; do bspc node $win -k ; done;


# WINDOWS STATES AND FLAGS #

# set the window state
super + {t,shift + t}
    bspc node -t {tiled,pseudo_tiled}

# toggle floating on and off
super + s
    bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

# toggle fullscreen on and off
super + f
    crystal --fullscreen

# set the node flags
super + ctrl + f; {m,l,s,p}
    bspc node -g {marked,locked,sticky,private}


# WINDOWS FOCUS AND SWAPPING #

# focus the node in the given direction or swap
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
    bspwm_move {west,south,north,east}

# focus the node for the given path jump
super + shift + {p,b}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
alt + {_,shift + }Tab
    bspc node -f {next,prev}.local.!hidden.window

# focus to desktop
super + {0-9}
    crystal --focus {0-9}

# Send to desktop and follow
super + shift + {0-9}
    crystal --send {0-9}

# move current window to a pre-selected space
super + p
    bspwm_fill

# swap the current node and the biggest window
super + g
    bspc node -s biggest.window

# rotate currents node
super + {_, shift} + r
    bspc node @/ --rotate {90,-90}


# PRESELECTION #

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


# MOVE AND RESIZE #

# balance node size
super + e
    bspc node @/ -B

# expand a window by moving one of its side outward
super + ctrl + s: {h,j,k,l}
    bspwm_resize {west,south,north,east} 50

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-10 0,0 10,0 -10,10 0}
