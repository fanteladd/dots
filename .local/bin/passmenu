#!/usr/bin/env bash

set -euo pipefail

if ! rbw unlocked ; then
  rbw unlock
fi

rbw ls | dmenu -p "ó°Œ†  " -i -theme dark-dmenu | xargs rbw get | wl-copy
dunstify -t 3000 "Password stored in the clipboard, available only for 30 seconds."
sleep 30
wl-copy --clear
dunstify -t 3000 "Clipboard cleared."
