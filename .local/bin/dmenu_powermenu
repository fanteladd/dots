#!/bin/sh -e
# powermenu script w/ dmenu

QUIT="󰈆 quit"
SUSP="󰏤 suspend"
REBOOT="󰜉 reboot"
OFF="󰐥 shutdown"

chosen=$(printf '%s\n%s\n%s\n%s\n' "$QUIT" "$SUSP" "$REBOOT" "$OFF" | dmenu -i -theme dark-pw) || exit 0

case "$chosen" in
    "$QUIT") if [ "$XDG_CURRENT_DESKTOP" = "Hyprland" ]; then
               pkill Hyprland 
             elif [ "$XDG_CURRENT_DESKTOP" = "bspwm" ]; then
               bspc quit
             else
               swaymsg exit
             fi
            ;;
    "$REBOOT")  systemctl reboot ;;
    "$OFF") systemctl poweroff ;;
    "$SUSP") systemctl suspend ;;
    *) echo 'no choice!' && exit 0 ;;
esac
