#!/bin/sh
# killer: kill process using dmenu

set -eu

pss="$(ps -u "$USER" -o pid,%mem,%cpu,comm | sort -b -k2 -r |  awk 'NR>1 {print $4 $5 $6}' | dmenu -p "killing what?" -i)" || exit 1
pid=$(echo "$pss" | awk '{print $1}')
proc=$(echo "$pss" | awk '{print $4}')

kill -15 "$pid" 2>/dev/null

if [ -z "$proc" ]; then
    notify-send "no kill."
else
    notify-send "$proc killed."
fi
