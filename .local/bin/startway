#!/bin/bash
# startup script for sway from console

[[ "$1" != "nvidia" && -n "$1" ]] && {
    echo "Usage: $( basename "$0" ): start a sway session from a console tty"
    exit 0
}

LOGFILE=.wsession-errors
&> /tmp/$LOGFILE
exec &> /tmp/$LOGFILE
set -x
echo "sway Starting: $( date +%F-%R )"

rm "$HOME/.cache/*.wob"

if [[ "$1" == "nvidia" ]]; then
  export $(systemctl --user show-environment)
  export QT_QPA_PLATFORM="wayland;xcb"
	export GBM_BACKEND=nvidia-drm
	export WLR_NO_HARDWARE_CURSORS=1
  systemd-cat -t hyprland Hyprland
  swww kill
  systemctl --user stop graphical-session.target
  systemctl --user unset-environment DISPLAY WAYLAND_DISPLAY
else
  export $(systemctl --user show-environment)
  systemd-cat -t hyprland Hyprland
  swww kill
  systemctl --user stop graphical-session.target
  systemctl --user unset-environment DISPLAY WAYLAND_DISPLAY
fi
